
<%= link_to "back home", root_path  %>
<h4>You have <%= @watches.count %> movies left to see</h4>
<div class="container">
  <div class="row">
    <div class="span12">
      <ul class="thumbnails" style="list-style-type: none;">
        <% @watches.each do |item| %>
            <li class="span5 clearfix">
              <div class="something">
                <img src="<%= item.poster %>" alt="poster" class="pull-left span2 clearfix" style='margin-right:10px'>
                <div class="caption" class="pull-left">
                  <h4>
                    <a href="#" ><%= item.title %></a>
                  </h4>
                  <p class="<% if item.critics_score > 50 %> red <% else %> green <% end %>">
                    Critics: <%= item.critics_score %></p>
                  <p class="<% if item.audience_score > 50 %> red <% else %> green <% end %>">
                    Audience: <%= item.audience_score %></p>


                  <div class="tagsinput" style="border: none; background: none">
                    <span class="tag">
                        <span style="position: relative; right: 2px;">Seen it!</span>
                        <%= link_to "", {:controller => :watches, :action => 'destroy', :id => item.id }, :method => :delete, :class => "tagsinput-remove-link" %>
                    </span>
                  </div>

                  <!--<small><b>RG: </b>99384877</small>-->
                </div>
              </div>
            </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>