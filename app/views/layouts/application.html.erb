<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Riva Flix" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Riva Flix" %>">
    <%= stylesheet_link_tag "application", media: "all"%>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= controller.action_name %> <%= controller.controller_name %> ">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main id="mainer" role="main">
      <div class="row">
       <%= render 'layouts/messages' %>
       <%= yield %>
      </div>
    </main>
  </body>
</html>
